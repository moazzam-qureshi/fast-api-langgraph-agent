# OpenAI API Key for embeddings and LLM
OPENAI_API_KEY=your-openai-api-key

# JWT Secret Key (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here

# Redis configuration (optional - defaults provided)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# MinIO configuration (optional - defaults provided in docker-compose)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false

# Database URL (optional - default provided)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/postgres QureshiDesktopfastapi.env.example
